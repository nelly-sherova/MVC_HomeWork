@model List<MVCHomeWork.Models.Person>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    th, td {
        padding: 10px;
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<table>

    <thead>
        <tr>
            <th>ID</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
        </tr>
       
    </thead>

    <tbody>   
    
    @foreach (var person in Model)
    {
        <tr>
        
            <td>
               @person.Id
</td>
            <td>
                @person.LastName 
            </td>
            <td>
                @person.FirstName
            </td>
            <td>
                @person.MiddleName
            </td>
        </tr>
    }
        </tbody>

</table>
